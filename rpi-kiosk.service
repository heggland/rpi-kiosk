[Unit]
Description=rpi-kiosk

[Service]
User=pi
Environment="DISPLAY=:0"
ExecStart=/usr/bin/vlc --no-audio --loop --fullscreen --playlist-tree --playlist-autostart --random --no-video-title-show /home/pi/rpi-kiosk-playlist
WorkingDirectory=/home/pi
Restart=always

[Install]
WantedBy=multi-user.target
